<h3>Password Generator App</h3>
<input type="text" readonly id="input" placeholder="Create Password" >
<div id="btn" onclick="getpassword()">Password Generator</div>
<script>
function getpassword(){
var chars = "123456789wertyuiopasdfghjklzxcvbnm@#)$€£";
var passwordLenght = 16;
var password = "";

for(var i =0;i<passwordLenght;i++){
var randomNumber = Math.floor(Math.random() * chars.length);
password += chars.substring(randomNumber,randomNumber+1)
}
document.getElementById("input").value = password;
}
</script>
